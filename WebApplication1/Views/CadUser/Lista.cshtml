@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<WebApplication1.Models.Usuario>

<div style="margin-bottom: 15px;">
    <a href="@Url.Action("Cadastro", "CadUser")" class="btn btn-success">Novo Usuário</a>
</div>

@if (Model != null && Model.Count > 0)
{
    <div class="main-content">
        <table class="table">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Codigo</td>
                        <td>@item.Nome</td>
                        <td>@item.CPF</td>
                        <td>
                            <a href='@Url.Action("Editar", "CadUser", new { id = item.Codigo })' class="btn btn-primary btn-sm">Editar</a>
                            <a href='@Url.Action("Excluir", "CadUser", new { id = item.Codigo })' class="btn btn-danger btn-sm" onclick="return confirm('Deseja realmente excluir este usuário?');">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{

    <h2>Nenhum usuário cadastrado.</h2>
}