<div class="main-content">
    @model WebApplication1.Models.Carga
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
        ViewBag.Title = "Cadastro de Carga";
    }

    <div class="container mt-4">
        <h2>Cadastro de Carga</h2>
        <hr />

        @using (Html.BeginForm("Cadastro", "Carga", FormMethod.Post))
        {

            <div class="mb-3">
                <label for="Nome">Descrição</label>
                @Html.TextBoxFor(m => m.Remetente, new { @class = "w-100"})
                @Html.ValidationMessageFor(m => m.Remetente, "", new { @class = "text-danger" })
            </div>

            <div class="row">
                <div class="col-md-auto">
                </div>
            </div>

            <div class="mb-3">
                <label for="Nome">Remetente</label>
                @Html.TextBoxFor(m => m.Quantidade, new { @class = "w-100"})
                @Html.ValidationMessageFor(m => m.Quantidade, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label for="CPF">Quantidade</label>
                @Html.TextAreaFor(m => m.Descricao, new { @class = "w-100"})
                @Html.ValidationMessageFor(m => m.Descricao, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">Salvar</button>
                <a href="@Url.Action("Lista", "Carga")" class="btn btn-secondary">Voltar</a>
            </div>
        }
    </div>
</div>